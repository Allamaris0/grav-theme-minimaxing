		<div class="4u 12u(mobile)">
			{% include 'partials/sections/bios.html.twig' %}
		</div>
		<div class="4u 12u(mobile)">
			{% include 'partials/sections/links4.html.twig' %}
		</div>
	</div>
	<div class="row main-row">
		<div class="6u 12u(mobile)">
			{% include 'partials/sections/stories.html.twig' %}
		</div>
		<div class="6u 12u(mobile)">
			{% include 'partials/featured-post.html.twig' %}
		</div>
	</div>

{% endblock %}
